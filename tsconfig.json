{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    },
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": false,
    "jsx": "react",
    "lib": ["es2015", "es2017.sharedmemory", "dom"],
    "experimentalDecorators": true
  },
  "parcelTsPluginOptions": {
    "transpileOnly": false
  }
}
